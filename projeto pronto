   //inicio do menu estoque
   int n;
   int l;
   int o;
   int i;
   int estoque(int es){
     int q;
     if(es==101){
         printf("\nDigite a quantidade que deseja cadastrar: ");
         scanf(" %d", &n);
         printf("Quantidade Cadastrada no Produto A com sucesso!");
         printf("\n101-Poltrona-%d unidades", n);
         printf("\n102-Sofá-%d unidades", l);
         printf("\n103-Mesa-%d unidades", o);
         printf("\n104-Cadeira-%d unidades", i);
     }else if(es==102){
         printf("\nDigite a quantidade que deseja cadastrar: ");
         scanf(" %d", &l);
         printf("Quantidade Cadastrada no Produto B com sucesso!");
     }else if(es==103){
         printf("\nDigite a quantidade que deseja cadastrar: ");
         scanf(" %d", &o);
         printf("Quantidade Cadastrada no Produto C com sucesso!");
     }else if(es==104){
         printf("\nDigite a quantidade que deseja cadastrar: ");
         scanf(" %d", &i);
         printf("Quantidade Cadastrada no Produto D com sucesso!");
     }else if (es==105){
         printf(" voltar ao menu principal"); //caso ele queira voltar ao menu principal
         menu_principal();
         
     }
     return es; //fim do menu estoque
 }
  
  //inicio do menu principal
 void menu_principal(){
     char escolha;
    printf("Escolha: \n 1) controle de estoque\n 2) -controle vendas\n 3) -controle financeiro\n 4) -sair\n ");
    scanf(" %c", &escolha);
    switch(escolha)
    {
        
        case '1':
         int es;
         printf("\nControle de estoque \n");
         printf("\nEscolha um código: \n");
         printf("\n101-Poltrona \n");
         printf("102-Sofá \n");
         printf("103-Mesa\n");
         printf("104-Cadeira\n\n");
         scanf("%d", &es);
         estoque(es);
         break;
         
        case '2':
        int ve;
         printf(" controle de vendas \n");
         printf(" escolha um código: \n");
         printf(" 301 \n");
         printf(" 302 \n");
         printf(" 303 \n");
         scanf("%d", &ve);
         vendas(ve);
         break;
         
        case '3':
        int fi;
         printf(" controle financeiro \n");
         printf(" escolha um código: \n");
         printf(" 201 \n");
         printf(" 202 \n");
         printf(" 203 \n");
         scanf("%d", &fi);
         financeiro(fi);
         
         break;
         
         case '4':
         printf(" sair");
         break;
         default:
            printf(" escolha invalida");
            break;
    }
    

 }
 //fim do menu principal
 
 int main(){
    menu_principal();
    return 0;
    
}
