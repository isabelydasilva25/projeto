             }
               
              break;
            }
        
            
    } else if(ve==303){
         printf(" produto c - R$15.00");
         printf(" quantos produtos você quer?");
         scanf(" %d", &quantidade);
         muti= quantidade *preco_c;
         printf(" preço com desconto %f" , muti);
         //printf("multiplicaçao");
