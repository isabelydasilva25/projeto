     return ve; //fim do menu vendas
 }
   
  //inicio do menu principal
 void menu_principal(){
     char escolha;
    printf("Escolha: \n 1) controle de estoque\n 2) -controle vendas\n 3) -controle financeiro\n 4) -sair\n ");
    scanf(" %c", &escolha);
    switch(escolha)
    {
        
        case '1':
         submenu_estoque();
         break;
         
        case '2':
        int ve;
         printf(" controle de vendas \n");
         printf(" escolha um código: \n");
         printf(" 301 \n");
         printf(" 302 \n");
         printf(" 303 \n");
         scanf("%d", &ve);
         vendas(ve);
         break;
         
        case '3':
        int fi;
         printf(" controle financeiro \n");
         printf(" escolha um código: \n");
         printf(" 201 \n");
         printf(" 202 \n");
         printf(" 203 \n");
         scanf("%d", &fi);
         financeiro(fi);
         
         break;
         
         case '4':
         printf(" sair");
         break;
         default:
            printf(" escolha invalida");
            break;
    }
    

 }
 //fim do menu principal
 
 int main(){
    menu_principal();
    return 0;
    
}
